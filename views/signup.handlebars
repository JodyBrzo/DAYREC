<div class="sign-up-container container">
    <div class="row">
      <div class="welcome col-md-6 col-sm-12 text-center">
        {{> intro }}
        <p id="intro-desc">How many times Destry will miss screen recording and sharing next class? Sign up to place a bet!</p>
      </div>
      <div class="sign-up-form col-md-6 col-sm-12">
        <h2 class="mb-4 mt-2">Sign Up</h2>
        <form class="signup">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" class="form-control mb-4" id="name" placeholder="Name">
          </div>
          {{> form }}
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <button type="submit" class="submit-button btn btn-default mt-3">SIGN UP</button>
        </form>
      </div>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="/public/js/signup.js"></script>
