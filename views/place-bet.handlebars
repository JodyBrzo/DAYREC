{{> navbar }}
<div class="place-bet-container container">
  {{> wallet }}
  {{> welcome }} 
  <div class="row">
      <div class="col-lg-5 col-md-12 place-your-bet">
          <h2 class="bet-today">Place Your Bet</h2>
          <form class="bet">
            <div class="form-group">
              <label for="screenshare-bet"># Screenshare Misses</label>
              <input type="text" class="form-control" id="screenshare-guess" placeholder="Enter Your Guess" {{userData.allowBetting}}>
            </div>
            <div class="form-group">
              <label for="recording-bet"># Recording Misses</label>
              <input type="text" class="form-control mb-4" id="recording-guess" placeholder="Enter Your Guess" {{userData.allowBetting}}>
            </div>
            <button type="submit" class="place-bet-button submit-button btn btn-default mt-4" id="place-bet" {{userData.allowBetting}}>PLACE BET</button>
          </form>
      </div>
      <div class="col-lg-2"></div>      
      <div class="col-lg-5 col-md-12 your-bet-today text-center">
         <h2 class="bet-today">Your Bet Today</h2>
        <div class="total">Total Records: <span class="totalUser">{{ userData.guessRecord }}</span></div>
        <div class="total">Total Shares: <span class="totalUser">{{ userData.guessShare }}</span></div>
      </div>
  </div>
  <div class="row">
      <div class="col-12">
        <h2 class="historical-rankings text-center">Historical Data</h2>
      </div>
      <div id="show-no-histoical-data">
        No historical Data Available
      </div>
      <div id="historical-data-chart" style="width:100%;">
        <canvas id="historical-data" style="margin-bottom:100px;border:1px solid #cdcdcd;"></canvas>
      </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
<script type="text/javascript" src="/js/place-bet.js"></script>